<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label text="New Person" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="nameInput" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button fx:id="addPersonButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addPersonActionHandler" text="Add Person" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="2" />

      <Label text="Current Group" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <ListView fx:id="nameList" prefHeight="220.0" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Button fx:id="removePersonButton" mnemonicParsing="false" onAction="#removePersonActionHandler" text="Remove Person" GridPane.columnIndex="2" GridPane.rowIndex="4" GridPane.valignment="TOP" />

            <Label text="Turn Length" GridPane.columnIndex="3" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin>
      </Label>
      <Button fx:id="resetButton" mnemonicParsing="false" onAction="#resetActionHandler" text="Reset" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="5" />
      <HBox GridPane.columnIndex="3" GridPane.rowIndex="5">
         <children>
            <HBox alignment="TOP_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopActionHandler" text="Stop" />
            
                  <Button fx:id="startButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#startActionHandler" text="Start" />
               </children>
            </HBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </HBox>
      <HBox spacing="10.0" GridPane.columnIndex="3" GridPane.rowIndex="2">
         <children>
            <TextField fx:id="minutesInput" prefWidth="50.0" />
            <Label alignment="CENTER" maxHeight="1.7976931348623157E308" text="Minutes" HBox.hgrow="ALWAYS" />
         </children>
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin>
      </HBox>

   </children>
   <padding>
      <Insets bottom="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
